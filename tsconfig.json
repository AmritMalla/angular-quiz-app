{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "module": "system",
    "noImplicitAny": true,
    "removeComments": true,
    "suppressImplicitAnyIndexErrors": true,
    "supportHtmlImports": true,
    "sourceMap": true,
    "target": "es6",
    "typeCheck": false
  },
  "exclude": [
    "node_modules",
    "jspm_packages",
    "typings"
  ]
}
